<?xml version="1.0" encoding="UTF-8" ?>
<Shell x:Class="SmartAccountant.Client.MAUI.AppShell"
	   xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
	   xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
	   xmlns:pages="clr-namespace:SmartAccountant.Client.MAUI.Pages"
	   Title="SmartAccountant.Client.MAUI">

	<FlyoutItem Title="Sign-in" IsEnabled="True">
		<Tab>
			<ShellContent Title="Sign-in"
						  ContentTemplate="{DataTemplate pages:SignInPage}"
						  Route="signIn" />
		</Tab>
	</FlyoutItem>
	
	<FlyoutItem Title="Accounts" IsVisible="True">
		<Tab>
			<ShellContent Title="Accounts"
						  ContentTemplate="{DataTemplate pages:AccountsPage}"
						  Route="accounts" />
		</Tab>
	</FlyoutItem>

</Shell>
