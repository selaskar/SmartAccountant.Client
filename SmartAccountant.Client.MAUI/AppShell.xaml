<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="SmartAccountant.Client.MAUI.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:SmartAccountant.Client.MAUI"
    xmlns:pages="clr-namespace:SmartAccountant.Client.MAUI.Pages"
    Title="SmartAccountant.Client.MAUI">

	<ShellContent
        Title="Sign-in"
        ContentTemplate="{DataTemplate pages:SignInPage}"
        Route="SignInPage" 
		BindingContext=""/>

    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" />

</Shell>
