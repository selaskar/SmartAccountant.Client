<?xml version = "1.0" encoding = "UTF-8" ?>
<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:SmartAccountant.Client.MAUI"
			 xmlns:converters="clr-namespace:SmartAccountant.Client.MAUI.Converters"
			 x:Class="SmartAccountant.Client.MAUI.App">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Styles/Colors.xaml" />
                <ResourceDictionary Source="Resources/Styles/Styles.xaml" />
            </ResourceDictionary.MergedDictionaries>

			<converters:MonetaryValueConverter x:Key="convMonetaryValue" />
			<converters:TransactionColorConverter x:Key="convTransactionColor" />
		</ResourceDictionary>
    </Application.Resources>
</Application>
