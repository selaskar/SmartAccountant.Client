<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
			 xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
			 x:Class="SmartAccountant.Client.MAUI.Pages.SignInPage"
			 xmlns:viewModels="clr-namespace:SmartAccountant.Client.ViewModels;assembly=SmartAccountant.Client.ViewModels"
			 x:DataType="viewModels:SignInPageModel"
			 Title="Sign-In">
	
	<VerticalStackLayout>
		<Label VerticalOptions="Center"
			   HorizontalOptions="Center"
			   IsVisible="{Binding Username, Converter={StaticResource convNotNull}}"
			   Text="{Binding Username, StringFormat='Welcome, {0}!'}" />

		<Button Margin="3"
				Text="Sign In"
				Command="{Binding SignInCommand}" />

		<Button Margin="3"
				Text="Cancel"
				IsVisible="{Binding IsBusy}"
				Command="{Binding SignInCancelCommand}" />

		<Button Margin="3"
				Text="Sign Out"
				Command="{Binding SignOutCommand}" />
	</VerticalStackLayout>
</ContentPage>