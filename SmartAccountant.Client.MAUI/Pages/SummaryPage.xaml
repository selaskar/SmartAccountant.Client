<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
			 xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
			 xmlns:viewModels="clr-namespace:SmartAccountant.Client.ViewModels;assembly=SmartAccountant.Client.ViewModels"
			 xmlns:pages="clr-namespace:SmartAccountant.Client.MAUI.Pages"
			 x:Class="SmartAccountant.Client.MAUI.Pages.SummaryPage"
			 x:DataType="viewModels:SummaryPageModel"
			 Title="Summary">
	<Grid>
		<VerticalStackLayout>
			<Picker HorizontalOptions="Start"
					Margin="15"
					ItemsSource="{Binding Months,Mode=OneTime}"
					ItemDisplayBinding="{Binding Label}"
					SelectedItem="{Binding SelectedMonth}" />

			<pages:CurrencySummaryView BindingContext="{Binding Summary.Currencies[0]}" />
		</VerticalStackLayout>

		<ActivityIndicator IsRunning="{Binding IsBusy}"
						   IsVisible="{Binding IsBusy}"
						   Background="LightGray"
						   Opacity="0.5" />
	</Grid>
</ContentPage>