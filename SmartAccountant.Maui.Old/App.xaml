<?xml version = "1.0" encoding = "UTF-8" ?>
<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:SmartAccountant.Maui"
			 xmlns:converters="clr-namespace:SmartAccountant.Maui.Converters"
             x:Class="SmartAccountant.Maui.App">
	<Application.Resources>
		<ResourceDictionary>
			<ResourceDictionary.MergedDictionaries>
				<ResourceDictionary Source="Resources/Styles/Colors.xaml" />
				<ResourceDictionary Source="Resources/Styles/Styles.xaml" />
				<ResourceDictionary Source="Resources/Styles/AppStyles.xaml" />
			</ResourceDictionary.MergedDictionaries>

			<converters:CurrencyConverter x:Key="convCurrency"/>
			<converters:MonetaryValueConverter x:Key="convMonetaryValue"/>
		</ResourceDictionary>
	</Application.Resources>
</Application>
