<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SmartAccountant.Maui.Pages.SignIn"
             Title="SignIn">
    <VerticalStackLayout>
        <Label 
			x:Name="txtUserName"
            Text=""
            VerticalOptions="Center" 
            HorizontalOptions="Center" />

		<Button x:Name="btnLogin" Clicked="Button_Clicked" Text="Sign in"/>
		
		<Button x:Name="btnServiceCall" Clicked="btnServiceCall_Clicked" Text="Service Call"/>

		<Button x:Name="btnLogout" Clicked="SignOutButton_Clicked" Text="Sign out"/>
	</VerticalStackLayout>
</ContentPage>